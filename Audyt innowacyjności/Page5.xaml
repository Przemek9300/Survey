<Page x:Class="Audyt_innowacyjności.Page5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Audyt_innowacyjności"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page5">

    <Grid Margin="0,0,-308,-42">

        <Button Content="Dalej" HorizontalAlignment="Left" Margin="653,408,0,0" VerticalAlignment="Top" Width="75" Click="Next"/>
        <Button Content="Confij" HorizontalAlignment="Left" Margin="573,408,0,0" VerticalAlignment="Top" Width="75" Click="Back"/>

        <TextBox x:Name="SzczebleHierarchiPionowej" Text="{Binding SzczebleHierarchiPionowej, ValidatesOnNotifyDataErrors=True}" HorizontalAlignment="Left" Height="23" Margin="391,128,-211,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-1.562,-1.653"/>
        <TextBox x:Name="KoordynacjaPracyKomentarz" Text="{Binding KoordynacjaPracyKomentarz, ValidatesOnNotifyDataErrors=True}" HorizontalAlignment="Left" Height="23" Margin="391,184,-211,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-1.562,-1.653"/>
        <RadioButton GroupName="KoordynacjaPracy" Content="TAK" IsChecked="True" Margin="398,162,-152,121" Checked="KoordynacjaPracyTAK"/>
        <RadioButton GroupName="KoordynacjaPracy" Content="NIE" Margin="457,162,-211,121" Checked="KoordynacjaPracyNIE"/>

        <RadioButton GroupName="PracaZespolowa" Content="TAK" IsChecked="True" Margin="398,218,-152,65" Checked="PracaZespolowaTAK"/>
        <RadioButton GroupName="PracaZespolowa" Content="NIE" Margin="457,218,-211,65" Checked="PracaZespolowaNIE"/>

        <RadioButton GroupName="KomunikacjaWewnetrzna" Content="TAK" IsChecked="True" Margin="398,246,-152,37" Checked="KomunikacjaWewnetrznaTAK" RenderTransformOrigin="0.5,0.506"/>
        <RadioButton GroupName="KomunikacjaWewnetrzna" Content="NIE" Margin="457,246,-211,37" Checked="KomunikacjaWewnetrznaNIE"/>

        <RadioButton GroupName="WsparcieInnowacji" Content="TAK" IsChecked="True" Margin="398,274,-152,9" Checked="WsparcieInnowacjiTAK"/>
        <RadioButton GroupName="WsparcieInnowacji" Content="NIE" Margin="457,274,-211,9" Checked="WsparcieInnowacjiNIE"/>
        <TextBox x:Name="Innowacyjnosc" Text="{Binding Innowacyjnosc, ValidatesOnNotifyDataErrors=True}" HorizontalAlignment="Left" Height="23" Margin="398,296,-218,-19" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-1.562,-1.653"/>

        <Label Content="Dodatkowe dane, ile szczebli liczy hierarchia pionowa?" HorizontalAlignment="Left" Margin="79,128,-75,0" VerticalAlignment="Top" Width="296" />
        <Label Content="Czy istnieją i jakie są mechanizmy zapewniające koordynację pracy?" HorizontalAlignment="Left" Margin="10,156,-75,0" VerticalAlignment="Top" Width="365"/>
        <Label Content="Czy promowana jest praca zespołowa?" HorizontalAlignment="Left" Margin="161,212,-75,0" VerticalAlignment="Top" Width="214"/>
        <Label Content="Czy działa system komunikacji wewnętrznej? " HorizontalAlignment="Left" Margin="130,240,-74,0" VerticalAlignment="Top" Width="244"/>
        <Label Content="Czy kierownictwo najwyższego szczebla wspiera innowacje?" HorizontalAlignment="Left" Margin="51,268,-75,0" VerticalAlignment="Top" Width="324" />
        <Label Content=" Na ile innowacyjność stała się sposobem 'życia' w firmie?[1-5] " HorizontalAlignment="Left" Margin="36,294,-75,-18" VerticalAlignment="Top" Width="339" />

        <Label Content="Strona 4/14" HorizontalAlignment="Left" Margin="328,10,0,0" VerticalAlignment="Top"/>


    </Grid>
</Page>
