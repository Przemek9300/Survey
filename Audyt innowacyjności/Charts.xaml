<Page x:Class="Audyt_innowacyjności.Charts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:WpfCharts="clr-namespace:WpfCharts;assembly=WpfCharts"
    mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Charts">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<WpfCharts:SpiderChart Title="Spider chart"  
                               Lines="{Binding Lines}" 
                               Axis="{Binding Axes}" 
                               Minimum="1" 
                               Maximum="5" 
                               Ticks="5" 
                               ShowLegend="True" 
                               LegendLocation="BottomRight"
                               LegendBackgroundColor="Red" Height="600" Width="600" VerticalAlignment="Bottom" Grid.RowSpan="2" />
		<Button x:Name="AddLine" 
                HorizontalAlignment="Right"
                Margin="5"
                Padding="5"
                Grid.Row="1"
                Content="Add line" 
                Click="AddLineClick" RenderTransformOrigin="0.496,2.4" />

	</Grid>
</Page>
